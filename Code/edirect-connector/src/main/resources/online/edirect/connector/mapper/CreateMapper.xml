<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="online.edirect.connector.mapper.ObjectDao">
	<select id="selectCityById" resultType="City">
		select name from city
		where id = #{id}
	</select>
	<select id="selectAllCities" resultType="Hotel" parameterType="java.lang.Integer">
		select * from hotel where city >= #{criteria}
	</select>

	<!-- Create statements -->
	<insert id="save_category" parameterType="Category"
		useGeneratedKeys="true" keyProperty="category_id">
		<![CDATA[
			insert into category(category_name, description) values(#{category_name}, #{description})
		]]>
	</insert>

	<insert id="save_product" parameterType="Product"
		useGeneratedKeys="true" keyProperty="category_id">
		<![CDATA[
			insert into product(category_name, description) values(#{category_name}, #{description})
		]]>
	</insert>

	<!-- Delete statements -->
	<delete id="delete_category" parameterType="java.lang.String">
		<![CDATA[
			delete from category where category_name = #{criteria}
		]]>
	</delete>

</mapper>
