<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="online.edirect.connector.mapper.HotelMapper">

	<select id="selectByCityId" resultType="Hotel">
		select * from hotel where city = #{id}
	</select>
	
	<select id="allHotels" resultType="Hotel">
		select * from hotel
	</select>

	<select id="isHotelExist" resultType="Hotel">
		select * from hotel
		where city = #{city}
	</select>

	<insert id="saveHotel" parameterType="Hotel">
		insert into hotel(city, name, address, zip) values(#{city},#{name},#{address},#{zip})
	</insert>
	
	<insert id="saveCategory" parameterType="Category" useGeneratedKeys="true" keyProperty="category_id">
		insert into category(name) values(#{name})
	</insert>
</mapper>
