<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="online.edirect.connector.mapper.CityMapper">
	<select id="selectCityById" resultType="City">
		select name from city where id = #{id}
	</select>
	<select id="selectAllCities" resultType="Hotel" parameterType="java.lang.Integer">
		select * from hotel where city >= #{criteria}
	</select>
	
</mapper>
